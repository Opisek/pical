{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "incremental": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,    
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "."
  },
  "references": [
    { "path": "src/public" },
    { "path": "src/private" }
  ]
}